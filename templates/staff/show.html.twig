{% extends 'base.html.twig' %}

{% block title %}Staff{% endblock %}

{% block body %}
    <h1>{{'Staff' | trans}}</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ staff.id }}</td>
            </tr>
            <tr>
                <th>{{'Name' | trans}}</th>
                <td>{{ staff.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('staff_index') }}">{{'back to list' | trans}}</a>

    <a class="btn btn-warning" href="{{ path('staff_edit', {'id': staff.id}) }}">{{'edit' | trans}}</a>

    {{ include('staff/_delete_form.html.twig') }}
{% endblock %}
