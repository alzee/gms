<form class="form-inline col" method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded">

    {% if fields|length > 1 %}
        <select name="{{ filterFieldName }}">
            {% for field, label in fields %}
                <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
            {% endfor %}
        </select>
    {% else %}
        <input type="hidden" name="{{ filterFieldName }}" value="{{ fields|keys|first }}" />
    {% endif %}

<div class="form-group mr-3">
    <input class="form-control" type="text" value="{{ selectedValue }}" name="{{ filterValueName }}" />
</div>

    <button class="btn btn-primary btn-sm">{{ options.button }}</button>

</form>
