{% extends 'base.html.twig' %}

{% block title %}Craft{% endblock %}

{% block body %}
    <h1>Craft</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ craft.id }}</td>
            </tr>
            <tr>
                <th>{{'Name' | trans}}</th>
                <td>{{ craft.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('craft_index') }}">{{'back to list' | trans}}</a>

    <a class="btn btn-warning" href="{{ path('craft_edit', {'id': craft.id}) }}">{{'edit' | trans}}</a>

    {{ include('craft/_delete_form.html.twig') }}
{% endblock %}
