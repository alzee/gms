{% extends 'base.html.twig' %}

{% block title %}Craft index{% endblock %}

{% block body %}
    <h1>Craft index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for craft in crafts %}
            <tr>
                <td>{{ craft.id }}</td>
                <td>{{ craft.name }}</td>
                <td>
                    <a href="{{ path('craft_show', {'id': craft.id}) }}">show</a>
                    <a href="{{ path('craft_edit', {'id': craft.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('craft_new') }}">Create new</a>
{% endblock %}
