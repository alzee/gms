{% extends 'base.html.twig' %}

{% block title %}Craft index{% endblock %}

{% block body %}
    <h1>{{'Craft index' | trans}}</h1>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'Name' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for craft in crafts %}
            <tr>
                <td>{{ craft.id }}</td>
                <td>{{ craft.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('craft_show', {'id': craft.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('craft_edit', {'id': craft.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('craft_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
