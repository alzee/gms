{% extends 'base.html.twig' %}

{% block title %}Gd{% endblock %}

{% block body %}
    <h1>{{'Gd' | trans}}</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ gd.id }}</td>
            </tr>
            <tr>
                <th>{{'maindoc' | trans}}</th>
                <td>{{ gd.maindoc }}</td>
            </tr>
            <tr>
                <th>{{'team' | trans}}</th>
                <td>{{ gd.team }}</td>
            </tr>
            <tr>
                <th>{{'artisan' | trans}}</th>
                <td>{{ gd.artisan }}</td>
            </tr>
            <tr>
                <th>{{'goldclass' | trans}}</th>
                <td>{{ gd.goldclass }}</td>
            </tr>
            <tr>
                <th>{{'position' | trans}}</th>
                <td>{{ gd.position }}</td>
            </tr>
            <tr>
                <th>{{'weight' | trans}}</th>
                <td>{{ gd.weight }}</td>
            </tr>
            <tr>
                <th>{{'Date' | trans}}</th>
                <td>{{ gd.date ? gd.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('gd_index') }}">{{'back to list' | trans}}</a>

    <a class="btn btn-warning" href="{{ path('gd_edit', {'id': gd.id}) }}">{{'edit' | trans}}</a>

    {{ include('gd/_delete_form.html.twig') }}
{% endblock %}
