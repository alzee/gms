{% extends 'base.html.twig' %}

{% block title %}Gd index{% endblock %}

{% block body %}
    <h1>{{'Gd index' | trans}}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'maindoc' | trans}}</th>
                <th>{{'team' | trans}}</th>
                <th>{{'artisan' | trans}}</th>
                <th>{{'goldclass' | trans}}</th>
                <th>{{'position' | trans}}</th>
                <th>{{'weight' | trans}}</th>
                <th>{{'date' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for gd in gds %}
            <tr>
                <td>{{ gd.id }}</td>
                <td>{{ gd.maindoc}}</td>
                <td>{{ gd.team }}</td>
                <td>{{ gd.artisan }}</td>
                <td>{{ gd.goldclass }}</td>
                <td>{{ gd.position }}</td>
                <td>{{ gd.weight }}</td>
                <td>{{ gd.date ? gd.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('gd_show', {'id': gd.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('gd_edit', {'id': gd.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('gd_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
