{% extends 'base.html.twig' %}

{% block title %}Cotype{% endblock %}

{% block body %}
    <h1>{{'Cotype' | trans}}</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ cotype.id }}</td>
            </tr>
            <tr>
                <th>{{'Name' | trans}}</th>
