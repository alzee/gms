{% extends 'base.html.twig' %}

{% block title %}Factory index{% endblock %}

{% block body %}
    <h1>{{'Factory index' | trans}}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'Name' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for factory in factories %}
            <tr>
                <td>{{ factory.id }}</td>
                <td>{{ factory.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('factory_show', {'id': factory.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('factory_edit', {'id': factory.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('factory_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
