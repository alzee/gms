{% extends 'base.html.twig' %}

{% block title %}Addtype index{% endblock %}

{% block body %}
    <h1>Addtype index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for addtype in addtypes %}
            <tr>
                <td>{{ addtype.id }}</td>
                <td>{{ addtype.name }}</td>
                <td>
                    <a href="{{ path('addtype_show', {'id': addtype.id}) }}">show</a>
                    <a href="{{ path('addtype_edit', {'id': addtype.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('addtype_new') }}">Create new</a>
{% endblock %}
