{% extends 'base.html.twig' %}

{% block title %}Main index{% endblock %}

{% block body %}
    <h1>{{'Main index' | trans}}</h1>

  <div class="row mx-0 my-3">
    {{ knp_pagination_filter(mains, {'m.sn': 'Name'}) }}
    <div class="col-auto">
      <a class="btn btn-success" href="{{ path('main_new') }}">{{'Create new' | trans}}</a>
      <a class="mx-2 btn btn-success" href="{{ path('center_import') }}">{{'Import' | trans}}</a>
      <button class="btn btn-danger" id="export">{{'export' | trans}}</button>
    </div>
  </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(mains, 'sn'|trans, 'm.sn')}}</th>
                <th>{{ knp_pagination_sortable(mains, 'Date'|trans, 'm.date')}}</th>
                <th>{{ knp_pagination_sortable(mains, 'dueDate'|trans, 'm.dueDate')}}</th>
                <th>{{'CountPiece' | trans}}</th>
                <th>{{'CountChild' | trans}}</th>
                <th>{{'PerWeight' | trans}}</th>
                <th>{{'TotalWeight' | trans}}</th>
                <th>{{'UpstreamDoc' | trans}}</th>
                <th>{{'Model' | trans}}</th>
                <th>{{'Stamp' | trans}}</th>
                <th>{{'Size' | trans}}</th>
                <th>{{'Note' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for main in mains %}
            <tr>
                <td>{{ main.sn }}</td>
                <td>{{ main.date ? main.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ main.dueDate ? main.dueDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ main.countPiece }}</td>
                <td>{{ main.countChild }}</td>
                <td>{{ main.perWeight }}</td>
                <td>{{ main.totalWeight }}</td>
                <td>{{ main.upstreamDoc }}</td>
                <td>{{ main.model }}</td>
                <td>{{ main.stamp }}</td>
                <td>{{ main.size }}</td>
                <td>{{ main.note }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('main_show', {'id': main.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('main_edit', {'id': main.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(mains) }}
</div>
{% endblock %}
