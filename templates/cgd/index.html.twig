{% extends 'base.html.twig' %}

{% block title %}Cgd index{% endblock %}

{% block body %}
    <h1>{{'Cgd index' | trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'Date' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for cgd in cgds %}
            <tr>
                <td>{{ cgd.id }}</td>
                <td>{{ cgd.date ? cgd.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('cgd_show', {'id': cgd.id}) }}">{{'show' | trans}}</a>
                    <a href="{{ path('cgd_edit', {'id': cgd.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cgd_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
