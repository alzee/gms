{% extends 'base.html.twig' %}

{% block title %}Cgd index{% endblock %}

{% block body %}
    <h1>{{'Cgd index' | trans}}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'maindoc' | trans}}</th>
                <th>{{'goldclass' | trans}}</th>
                <th>{{'position' | trans}}</th>
                <th>{{'weight' | trans}}</th>
                <th>{{'note' | trans}}</th>
                <th>{{'Date' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for cgd in cgds %}
            <tr>
                <td>{{ cgd.id }}</td>
                <td>{{ cgd.maindoc }}</td>
                <td>{{ cgd.goldclass }}</td>
                <td>{{ cgd.position }}</td>
                <td>{{ cgd.weight }}</td>
                <td>{{ cgd.note }}</td>
                <td>{{ cgd.date ? cgd.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('cgd_show', {'id': cgd.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('cgd_edit', {'id': cgd.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('cgd_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
