{% extends 'base.html.twig' %}

{% block title %}Main index{% endblock %}

{% block body %}
    <h1>{{'Cgd index' | trans}}</h1>

  <div class="row mx-0 my-3">
    {{ knp_pagination_filter(cgds, {'m.sn': 'Name'}) }}
    <div class="col-auto">
      <a class="btn btn-success" href="{{ path('cgd_new') }}">{{'Create new' | trans}}</a>
    </div>
  </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>

                <th>{{'Id' | trans}}</th>
                <th>{{ knp_pagination_sortable(cgds, 'main'|trans, 'm.sn')}}</th>
                <th>{{ knp_pagination_sortable(cgds, 'child'|trans, 'm.sn')}}</th>
                <th>{{'goldclass' | trans}}</th>
                <th>{{'position' | trans}}</th>
                <th>{{'weight' | trans}}</th>
                <th>{{'note' | trans}}</th>
                <th>{{ knp_pagination_sortable(cgds, 'date'|trans, 'c.date')}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for cgd in cgds %}
            <tr>
                <td>{{ cgd.id }}</td>
                <td>{{ cgd.main }}</td>
                <td>{{ cgd.child }}</td>
                <td>{{ cgd.goldclass }}</td>
                <td>{{ cgd.position }}</td>
                <td>{{ cgd.weight }}</td>
                <td>{{ cgd.note }}</td>
                <td>{{ cgd.date ? cgd.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('cgd_show', {'id': cgd.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('cgd_edit', {'id': cgd.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(cgds) }}
</div>
{% endblock %}
