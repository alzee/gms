{% extends 'base.html.twig' %}

{% block title %}Ca index{% endblock %}

{% block body %}
    <h1>{{'Ca back' | trans}}</h1>

  <div class="row mx-0 my-3">
    {{ knp_pagination_filter(cas, {'u.sn': 'Name'}) }}
    <div class="col"></div>
    <div class="col-auto">
        <a class="btn btn-outline-danger" href="?filterField=c.status&filterValue=0">未收单</a>
        <a class="btn btn-outline-danger" href="?filterField=c.status&filterValue=2">已收单</a>
        <a class="btn btn-outline-danger" href="?">全部</a>
    </div>
  </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'child' | trans}}</th>
                <th>{{'clerk' | trans}}</th>
                <th>{{'weightGold' | trans}}</th>
                <th>{{'weightAttach' | trans}}</th>
                <th>{{'weight' | trans}}</th>
                <th>{{'craft' | trans}}</th>
                <th>{{'artisan' | trans}}</th>
                <th>{{'date' | trans}}</th>
                <th>{{'date1' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for ca in cas %}
            <tr>
                <td>{{ ca.id }}</td>
                <td>{{ ca.child }}</td>
                <td>{{ ca.clerk }}</td>
                <td>{{ ca.weightGold }}</td>
                <td>{{ ca.weightAttach }}</td>
                <td>{{ ca.weight }}</td>
                <td>{{ ca.craft }}</td>
                <td>{{ ca.artisan }}</td>
                <td>{{ ca.date|date("Y-m-d H:i:s") }}</td>
                <td>{{ ca.date1 ? ca.date1|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                {% if ca.status == 2 %}
                    <a class="btn btn-primary disabled" href="{{ path('ca_receive', {'id': ca.id}) }}">{{'received' | trans}}</a>
                {% else %}
                    <a class="btn btn-primary" href="{{ path('ca_receive', {'id': ca.id}) }}">{{'receive' | trans}}</a>
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
