{% extends 'base.html.twig' %}

{% block title %}文员收工匠{% endblock %}

{% block body %}
    <h1>文员收工匠</h1>
    <div class="row mb-3">
    <div class="col"></div>
    <a class="col-auto btn btn-primary mr-3" href="{{ path('ca_back_index') }}">{{'back to list' | trans}}</a>
    </div>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ ca.id }}</td>
            </tr>
            <tr>
                <th>{{'child' | trans}}</th>
                <td>{{ ca.child }}</td>
            </tr>
            <tr>
                <th>{{'clerk' | trans}}</th>
                <td>{{ ca.clerk }}</td>
            </tr>
            <tr>
                <th>{{'craft' | trans}}</th>
                <td>{{ ca.craft }}</td>
            </tr>
            <tr>
                <th>{{'artisan' | trans}}</th>
                <td>{{ ca.artisan }}</td>
            </tr>
            <tr>
                <th>{{'date' | trans}}</th>
                <td>{{ ca.date ? ca.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

{{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="row mr-1 mb-2">
      <div class="col"></div>
      <button class="col-2 btn btn-success mr-2">计耗计工费</button>
      <button class="col-2 btn btn-warning">无耗无工费</button>
    </div>
    <div class="row mr-1">
      <div class="col"></div>
      {% if weighing is defined %}
      <a id="weighing" class="col-2 btn btn-danger mr-2" href="#" color="light">{{ 'weighing' | trans}}</a>
      {% endif %}
    <button class="col-2 btn btn-info">{{ button_label|default('确认收单')  | trans}}</button>
    </div>
{{ form_end(form) }}

{% endblock %}
