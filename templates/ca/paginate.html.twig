{% extends 'base.html.twig' %}

{% block title %}Ca index{% endblock %}

{% block body %}
    <h1>{{'Ca index' | trans}}</h1>

  <div class="row mx-0 my-3">
    {{ knp_pagination_filter(cas, {'c.child': 'Name'}) }}
    <div class="col-auto">
      <a class="btn btn-success" href="{{ path('ca_new') }}">{{'Create new' | trans}}</a>
    </div>
  </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'child' | trans}}</th>
                <th>{{'clerk' | trans}}</th>
                <th>{{'weightGold' | trans}}</th>
                <th>{{'weightAttach' | trans}}</th>
                <th>{{'weight' | trans}}</th>
                <th>{{'craft' | trans}}</th>
                <th>{{'artisan' | trans}}</th>
                <th>{{ knp_pagination_sortable(cas, 'Date'|trans, 'c.date')}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for ca in cas %}
            <tr>
                <td>{{ ca.id }}</td>
                <td>{{ ca.child }}</td>
                <td>{{ ca.clerk }}</td>
                <td>{{ ca.weightGold }}</td>
                <td>{{ ca.weightAttach }}</td>
                <td>{{ ca.weight }}</td>
                <td>{{ ca.craft }}</td>
                <td>{{ ca.artisan }}</td>
                <td>{{ ca.date|date("Y-m-d H:i:s") }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('ca_show', {'id': ca.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('ca_edit', {'id': ca.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(cas) }}
</div>
{% endblock %}
