{% extends 'base.html.twig' %}

{% block title %}{{page | capitalize | trans}}{% endblock %}

{% block body %}
    <h1>{{"#{page} index" | capitalize | trans}}</h1>

  <div class="row mx-0 my-3">
    {% if filters is defined %}
    {{ knp_pagination_filter(items, filters) }}
    {% else %}
    <div class="col"></div>
    {% endif %}
    <div class="col-auto">
      <a class="btn btn-success" href="{{ path("#{page}_new") }}">{{'Create new' | trans}}</a>
      <a class="mx-2 btn btn-success" href="{{ path('center_import') }}">{{'Import' | trans}}</a>
      <button class="btn btn-danger" id="export">{{'export' | trans}}</button>
    </div>
  </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                {% for col in columns %}
                <th>{{col | capitalize | trans}}</th>
                {% endfor %}
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                {% for col in columns %}
                <td>{{ attribute(item, col) }}</td>
                {% endfor %}
                {#
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.username }}</td>
                <td>{{ item.team }}</td>
                <td>{{ item.note }}</td>
                #}
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path("#{page}_show", {'id': item.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-sm btn-warning" href="{{ path("#{page}_edit", {'id': item.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(items) }}
</div>
{% endblock %}
