<form method="post" action="{{ path('doctype_delete', {'id': doctype.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ doctype.id) }}">
    <button class="btn btn-danger">{{'Delete' | trans}}</button>
</form>
