{% extends 'base.html.twig' %}

{% block title %}Granule index{% endblock %}

{% block body %}
    <h1>{{'Granule index' | trans}}</h1>

  <div class="row mx-0 my-3">
  <div class="col">
  </div>
    <div class="col-auto">
      <a class="btn btn-success" href="{{ path('granule_new') }}">{{'Create new' | trans}}</a>
      <a class="mx-2 btn btn-success" href="{{ path('center_import') }}">{{'Import' | trans}}</a>
      <button class="btn btn-danger" id="export">{{'export' | trans}}</button>
    </div>
  </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'Name' | trans}}</th>
                <th>{{'Granule' | trans}}</th>
                <th>{{'granule.note' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for granule in granules %}
            <tr>
                <td>{{ granule.id }}</td>
                <td>{{ granule.name }}</td>
                <td>{{ granule.granule }}</td>
                <td>{{ granule.note }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('granule_show', {'id': granule.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('granule_edit', {'id': granule.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
