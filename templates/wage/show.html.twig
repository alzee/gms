{% extends 'base.html.twig' %}

{% block title %}Wage{% endblock %}

{% block body %}
    <h1>{{'Wage' | trans}}</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ wage.id }}</td>
            </tr>
            <tr>
                <th>{{'Name' | trans}}</th>
                <td>{{ wage.name }}</td>
            </tr>
            <tr>
                <th>{{'Model' | trans}}</th>
                <td>{{ wage.model }}</td>
            </tr>
            <tr>
                <th>{{'Wage' | trans}}</th>
                <td>{{ wage.wage }}</td>
            </tr>
            <tr>
                <th>{{'Note' | trans}}</th>
                <td>{{ wage.note }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('wage_index') }}">{{'back to list' | trans}}</a>

    <a class="btn btn-warning" href="{{ path('wage_edit', {'id': wage.id}) }}">{{'edit' | trans}}</a>

    {{ include('wage/_delete_form.html.twig') }}
{% endblock %}
