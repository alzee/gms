{% extends 'base.html.twig' %}

{% block title %}Gac index{% endblock %}

{% block body %}
    <h1>{{'Gac index' | trans}}</h1>

  <div class="row mx-0 my-3">
    {{ knp_pagination_filter(gacs, {'m.sn': 'Name'}) }}
    <div class="col-auto">
      <a class="btn btn-success" href="{{ path('gac_new') }}">{{'Create new' | trans}}</a>
    </div>
  </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'clerk' | trans}}</th>
                <th>{{'artisan' | trans}}</th>
                <th>{{'team' | trans}}</th>
                <th>{{'goldclass' | trans}}</th>
                <th>{{'position' | trans}}</th>
                <th>{{'weight' | trans}}</th>
                <th>{{'note' | trans}}</th>
                <th>{{ knp_pagination_sortable(gacs, 'Date'|trans, 'g.date')}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for gac in gacs %}
            <tr>
                <td>{{ gac.id }}</td>
                <td>{{ gac.clerk }}</td>
                <td>{{ gac.artisan }}</td>
                <td>{{ gac.team }}</td>
                <td>{{ gac.goldclass }}</td>
                <td>{{ gac.position }}</td>
                <td>{{ gac.weight }}</td>
                <td>{{ gac.note }}</td>
                <td>{{ gac.date ? gac.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('gac_show', {'id': gac.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('gac_edit', {'id': gac.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(gacs) }}
</div>
{% endblock %}
