{% extends 'base.html.twig' %}

{% block title %}Gb{% endblock %}

{% block body %}
    <h1>{{'Gb' | trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ gb.id }}</td>
            </tr>
            <tr>
                <th>{{'company' | trans}}</th>
                <td>{{ gb.company }}</td>
            </tr>
            <tr>
                <th>{{'goldclass' | trans}}</th>
                <td>{{ gb.goldclass }}</td>
            </tr>
            <tr>
                <th>{{'position' | trans}}</th>
                <td>{{ gb.position }}</td>
            </tr>
            <tr>
                <th>{{'addtype' | trans}}</th>
                <td>{{ gb.addtype }}</td>
            </tr>
            <tr>
                <th>{{'addreason' | trans}}</th>
                <td>{{ gb.addreason }}</td>
            </tr>
            <tr>
                <th>{{'weightBooked' | trans}}</th>
                <td>{{ gb.weightBooked }}</td>
            </tr>
            <tr>
                <th>{{'weight' | trans}}</th>
                <td>{{ gb.weight }}</td>
            </tr>
            <tr>
                <th>{{'short' | trans}}</th>
                <td>{{ gb.short }}</td>
            </tr>
            <tr>
                <th>{{'note' | trans}}</th>
                <td>{{ gb.note }}</td>
            </tr>
            <tr>
                <th>{{'Date' | trans}}</th>
                <td>{{ gb.date ? gb.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('gb_index') }}">{{'back to list' | trans}}</a>

    <a class="btn btn-warning" href="{{ path('gb_edit', {'id': gb.id}) }}">{{'edit' | trans}}</a>

    {{ include('gb/_delete_form.html.twig') }}
{% endblock %}
