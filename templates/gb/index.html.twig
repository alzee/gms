{% extends 'base.html.twig' %}

{% block title %}Gb index{% endblock %}

{% block body %}
    <h1>{{'Gb index' | trans}}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'company' | trans}}</th>
                <th>{{'goldclass' | trans}}</th>
                <th>{{'position' | trans}}</th>
                <th>{{'addtype' | trans}}</th>
                <th>{{'addreason' | trans}}</th>
                <th>{{'weight' | trans}}</th>
                <th>{{'weightBooked' | trans}}</th>
                <th>{{'short' | trans}}</th>
                <th>{{'note' | trans}}</th>
                <th>{{'Date' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for gb in gbs %}
            <tr>
                <td>{{ gb.id }}</td>
                <td>{{ gb.company }}</td>
                <td>{{ gb.goldclass }}</td>
                <td>{{ gb.position }}</td>
                <td>{{ gb.addtype }}</td>
                <td>{{ gb.addreason }}</td>
                <td>{{ gb.weight }}</td>
                <td>{{ gb.weightBooked }}</td>
                <td>{{ gb.short }}</td>
                <td>{{ gb.note }}</td>
                <td>{{ gb.date ? gb.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('gb_show', {'id': gb.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('gb_edit', {'id': gb.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('gb_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
