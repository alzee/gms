{% extends 'base.html.twig' %}

{% block title %}Gb index{% endblock %}

{% block body %}
    <h1>Gb index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gb in gbs %}
            <tr>
                <td>{{ gb.id }}</td>
                <td>{{ gb.date ? gb.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('gb_show', {'id': gb.id}) }}">show</a>
                    <a href="{{ path('gb_edit', {'id': gb.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('gb_new') }}">Create new</a>
{% endblock %}
