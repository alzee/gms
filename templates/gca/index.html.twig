{% extends 'base.html.twig' %}

{% block title %}Gca index{% endblock %}

{% block body %}
    <h1>Gca index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gca in gcas %}
            <tr>
                <td>{{ gca.id }}</td>
                <td>{{ gca.date ? gca.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('gca_show', {'id': gca.id}) }}">show</a>
                    <a href="{{ path('gca_edit', {'id': gca.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('gca_new') }}">Create new</a>
{% endblock %}
