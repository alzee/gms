<form class="delete" method="post" action="{{ path('gca_delete', {'id': gca.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gca.id) }}">
    <button class="btn btn-danger">{{'Delete' | trans}}</button>
</form>
