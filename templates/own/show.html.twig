{% extends 'base.html.twig' %}

{% block title %}Own{% endblock %}

{% block body %}
    <h1>{{'Own' | trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ own.id }}</td>
            </tr>
            <tr>
                <th>{{'Date' | trans}}</th>
                <td>{{ own.date ? own.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('own_index') }}">{{'back to list' | trans}}</a>

    <a class="btn btn-warning" href="{{ path('own_edit', {'id': own.id}) }}">{{'edit' | trans}}</a>

    {{ include('own/_delete_form.html.twig') }}
{% endblock %}
