{% extends 'base.html.twig' %}

{% block title %}Clerk{% endblock %}

{% block body %}
    <h1>{{'Clerk' | trans}}</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ clerk.id }}</td>
