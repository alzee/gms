{% extends 'base.html.twig' %}

{% block title %}Clerk index{% endblock %}

{% block body %}
    <h1>{{'Clerk index' | trans}}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'Name' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for clerk in clerks %}
            <tr>
                <td>{{ clerk.id }}</td>
                <td>{{ clerk.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('clerk_show', {'id': clerk.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('clerk_edit', {'id': clerk.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('clerk_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
