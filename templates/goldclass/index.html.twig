{% extends 'base.html.twig' %}

{% block title %}Goldclass index{% endblock %}

{% block body %}
    <h1>{{'Goldclass index' | trans}}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'Name' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for goldclass in goldclasses %}
            <tr>
                <td>{{ goldclass.id }}</td>
                <td>{{ goldclass.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('goldclass_show', {'id': goldclass.id}) }}">{{ 'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('goldclass_edit', {'id': goldclass.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('goldclass_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
