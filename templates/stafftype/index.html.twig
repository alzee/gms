{% extends 'base.html.twig' %}

{% block title %}Stafftype index{% endblock %}

{% block body %}
    <h1>{{'Stafftype index' | trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'Name' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for stafftype in stafftypes %}
            <tr>
                <td>{{ stafftype.id }}</td>
                <td>{{ stafftype.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('stafftype_show', {'id': stafftype.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('stafftype_edit', {'id': stafftype.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('stafftype_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
