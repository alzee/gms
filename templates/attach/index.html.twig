{% extends 'base.html.twig' %}

{% block title %}Attach index{% endblock %}

{% block body %}
    <h1>Attach index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attach in attaches %}
            <tr>
                <td>{{ attach.id }}</td>
                <td>{{ attach.name }}</td>
                <td>
                    <a href="{{ path('attach_show', {'id': attach.id}) }}">show</a>
                    <a href="{{ path('attach_edit', {'id': attach.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('attach_new') }}">Create new</a>
{% endblock %}
