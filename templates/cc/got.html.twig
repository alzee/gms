{% extends 'base.html.twig' %}

{% block title %}Cc index{% endblock %}

{% block body %}
    <h1>{{'Cc index' | trans}}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'team' | trans}}</th>
                <th>{{'sender' | trans}}</th>
                <th>{{'recipient' | trans}}</th>
                <th>{{'goldclass' | trans}}</th>
                <th>{{'position' | trans}}</th>
                <th>{{'weight' | trans}}</th>
                <th>{{'status' | trans}}</th>
                <th>{{'Date' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for cc in ccs %}
            <tr>
                <td>{{ cc.id }}</td>
                <td>{{ cc.team }}</td>
                <td>{{ cc.sender }}</td>
                <td>{{ cc.recipient }}</td>
                <td>{{ cc.goldclass }}</td>
                <td>{{ cc.position }}</td>
                <td>{{ cc.weight }}</td>
                <td>{{ cc.status }}</td>
                <td>{{ cc.date ? cc.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                {% if cc.status == 2 %}
                    <a class="btn btn-warning disabled" href="{{ path('cc_confirm', {'id': cc.id}) }}">{{'confirmed' | trans}}</a>
                {% else %}
                    <a class="btn btn-warning" href="{{ path('cc_confirm', {'id': cc.id}) }}">{{'confirm' | trans}}</a>
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
