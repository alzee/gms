{% extends 'base.html.twig' %}

{% block title %}Cc index{% endblock %}

{% block body %}
    <h1>Cc index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cc in ccs %}
            <tr>
                <td>{{ cc.id }}</td>
                <td>{{ cc.date ? cc.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('cc_show', {'id': cc.id}) }}">show</a>
                    <a href="{{ path('cc_edit', {'id': cc.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cc_new') }}">Create new</a>
{% endblock %}
