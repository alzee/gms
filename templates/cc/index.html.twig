{% extends 'base.html.twig' %}

{% block title %}Cc index{% endblock %}

{% block body %}
    <h1>{{'Cc index' | trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'Date' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for cc in ccs %}
            <tr>
                <td>{{ cc.id }}</td>
                <td>{{ cc.date ? cc.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('cc_show', {'id': cc.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('cc_edit', {'id': cc.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('cc_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
