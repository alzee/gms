{% extends 'base.html.twig' %}

{% block title %}Op index{% endblock %}

{% block body %}
    <h1>{{'Op index' | trans}}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'Name' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for op in ops %}
            <tr>
                <td>{{ op.id }}</td>
                <td>{{ op.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('op_show', {'id': op.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('op_edit', {'id': op.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('op_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
