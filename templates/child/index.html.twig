{% extends 'base.html.twig' %}

{% block title %}Child index{% endblock %}

{% block body %}
    <h1>{{'Child index' | trans}}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'sn' | trans}}</th>
                <th>{{'main' | trans}}</th>
                <th>{{'countPiece' | trans}}</th>
                <th>{{'goldclass' | trans}}</th>
                <th>{{'weight' | trans}}</th>
                <th>{{'box' | trans}}</th>
                <th>{{'note' | trans}}</th>
                <th>{{'Date' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for child in children %}
            <tr>
                <td>{{ child.sn }}</td>
                <td>{{ child.main }}</td>
                <td>{{ child.countPiece }}</td>
                <td>{{ child.goldclass }}</td>
                <td>{{ child.weight }}</td>
                <td>{{ child.box }}</td>
                <td>{{ child.note }}</td>
                <td>{{ child.date ? child.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('child_show', {'id': child.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('child_edit', {'id': child.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('child_new') }}">{{'Create new' | trans}}</a>
{% endblock %}
