{% extends 'base.html.twig' %}

{% block title %}Child{% endblock %}

{% block body %}
    <h1>{{'Child' | trans}}</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{'sn' | trans}}</th>
                <td>{{ child.sn }}</td>
            </tr>
            <tr>
                <th>{{'main' | trans}}</th>
                <td>{{ child.main }}</td>
            </tr>
            <tr>
                <th>{{'goldclass' | trans}}</th>
                <td>{{ child.goldclass }}</td>
            </tr>
            <tr>
                <th>{{'weight' | trans}}</th>
                <td>{{ child.weight }}</td>
            </tr>
            <tr>
                <th>{{'note' | trans}}</th>
                <td>{{ child.note }}</td>
            </tr>
            <tr>
                <th>{{'Date' | trans}}</th>
                <td>{{ child.date ? child.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('child_index') }}">{{'back to list' | trans}}</a>

    <a class="btn btn-warning" href="{{ path('child_edit', {'id': child.id}) }}">{{'edit' | trans}}</a>

    {{ include('child/_delete_form.html.twig') }}
{% endblock %}
