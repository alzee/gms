{% extends 'base.html.twig' %}

{% block title %}Center{% endblock %}

{% block body %}
    <h1>{{'Center' | trans}}</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ center.id }}</td>
            </tr>
            <tr>
                <th>{{'Date' | trans}}</th>
                <td>{{ center.date ? center.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('center_index') }}">{{'back to list' | trans}}</a>

    <a class="btn btn-warning" href="{{ path('center_edit', {'id': center.id}) }}">{{'edit' | trans}}</a>

    {{ include('center/_delete_form.html.twig') }}
{% endblock %}
