{% extends 'base.html.twig' %}

{% block title %}Center index{% endblock %}

{% block body %}
    <h1>{{'Center index' | trans}}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{'Id' | trans}}</th>
                <th>{{'Date' | trans}}</th>
                <th>{{'actions' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for center in centers %}
            <tr>
                <td>{{ center.id }}</td>
                <td>{{ center.date ? center.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('center_show', {'id': center.id}) }}">{{'show' | trans}}</a>
                    <a class="btn btn-warning" href="{{ path('center_edit', {'id': center.id}) }}">{{'edit' | trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no records found' | trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{#
    <a class="btn btn-success" href="{{ path('center_new') }}">{{'Create new' | trans}}</a>
#}
    <a class="btn btn-success" href="{{ path('center_import') }}">{{'Import' | trans}}</a>
{% endblock %}
