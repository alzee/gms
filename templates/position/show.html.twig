{% extends 'base.html.twig' %}

{% block title %}Position{% endblock %}

{% block body %}
    <h1>{{'Position' | trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ position.id }}</td>
            </tr>
            <tr>
                <th>{{'Name' | trans}}</th>
                <td>{{ position.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('position_index') }}">{{'back to list' | trans}}</a>

    <a class="btn btn-warning" href="{{ path('position_edit', {'id': position.id}) }}">{{'edit' | trans}}</a>

    {{ include('position/_delete_form.html.twig') }}
{% endblock %}
