{% extends 'base.html.twig' %}

{% block title %}Model{% endblock %}

{% block body %}
    <h1>{{'Model' | trans}}</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ model.id }}</td>
            </tr>
            <tr>
                <th>{{'Name' | trans}}</th>
                <td>{{ model.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('model_index') }}">{{'back to list' | trans}}</a>

    <a class="btn btn-warning" href="{{ path('model_edit', {'id': model.id}) }}">{{'edit' | trans}}</a>

    {{ include('model/_delete_form.html.twig') }}
{% endblock %}
