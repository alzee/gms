{% extends 'base.html.twig' %}

{% block title %}Line{% endblock %}

{% block body %}
    <h1>{{'Line' | trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ line.id }}</td>
            </tr>
            <tr>
                <th>{{'Name' | trans}}</th>
