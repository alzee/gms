<form class="delete" method="post" action="{{ path('line_delete', {'id': line.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ line.id) }}">
    <button class="btn btn-danger">{{'Delete' | trans}}</button>
</form>
