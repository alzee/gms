{% extends 'base.html.twig' %}

{% block title %}Series{% endblock %}

{% block body %}
    <h1>{{'Series' | trans}}</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{'Id' | trans}}</th>
                <td>{{ series.id }}</td>
            </tr>
            <tr>
                <th>{{'Name' | trans}}</th>
                <td>{{ series.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('series_index') }}">{{'back to list' | trans}}</a>

    <a class="btn btn-warning" href="{{ path('series_edit', {'id': series.id}) }}">{{'edit' | trans}}</a>

    {{ include('series/_delete_form.html.twig') }}
{% endblock %}
